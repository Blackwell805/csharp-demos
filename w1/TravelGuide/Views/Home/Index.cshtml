<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="~/styles.css">
</head>

<body>
  @{
    List<string> travelDestinations = new List<string>()
  {
  "Longyearbyen", "Solovetsky Islands", "Socotra", "Bhutan"
  };
  }

  <h1 class="text-center">Travel Guide</h1>
  <h2>@ViewBag.Introduction</h2>
  <img src="@ViewBag.ImgUrl" alt="Are You Ready FOr Your Quest">
  <p>Travel guide created in @ViewBag.YearCreated</p>

  <ul>
    @foreach (string destination in travelDestinations)
    {
      <li>
        <a href="/travel/@destination">@destination</a>
      </li>
    }
  </ul>

</body>

</html>