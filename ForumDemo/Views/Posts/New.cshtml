@model Post

<div class="container w-75">
  <h2 class="text-center">New Post</h2>

  <form asp-controller="Posts" asp-action="Create" class="shadow p-3 mb-5 rounded" method="POST">
    <div class="form-group">
      <label asp-for="Topic"></label>
      <span asp-validation-for="Topic" class="text-danger font-weight-bold"></span>
      <input asp-for="Topic" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Body"></label>
      <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
      <input asp-for="Body" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="ImgUrl"></label>
      <span asp-validation-for="ImgUrl" class="text-danger font-weight-bold"></span>
      <input asp-for="ImgUrl" type="text" class="form-control">
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>